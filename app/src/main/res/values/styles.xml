<resources>
    <style name="AppTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_alert_window</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomBottomSheetDialog.NoFloat" parent="CustomBottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>
