<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDialogHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Header"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            tools:text="Message"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonDialogFirstAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_primary_small"
            android:gravity="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="14sp"
            android:includeFontPadding="false"
            tools:text="First"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonDialogSecondAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_gray_small"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:includeFontPadding="false"
            tools:text="Second"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonDialogThirdAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_gray_small"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:includeFontPadding="false"
            tools:text="Third"/>

    </LinearLayout>

</ScrollView>
